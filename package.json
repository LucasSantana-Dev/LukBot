{
    "name": "discord-bot",
    "version": "1.0.0",
    "description": "A modern Discord bot for music playback and downloads with advanced features",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsup",
        "build:docker": "./scripts/discord-bot.sh build",
        "start": "./scripts/discord-bot.sh start",
        "dev": "tsx watch src/index.ts",
        "stop": "./scripts/discord-bot.sh stop",
        "restart": "./scripts/discord-bot.sh restart",
        "logs": "./scripts/discord-bot.sh logs",
        "status": "./scripts/discord-bot.sh status",
        "clean": "./scripts/discord-bot.sh clean",
        "help": "./scripts/discord-bot.sh help",
        "format": "prettier . --write",
        "lint": "eslint . -c eslint.config.js",
        "lint:fix": "eslint . -c eslint.config.js --fix",
        "type:check": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
        "test:unit": "jest --testPathPatterns=unit",
        "test:integration": "jest --testPathPatterns=integration",
        "test:e2e": "jest --testPathPatterns=e2e",
        "test:services": "jest --testPathPatterns=services",
        "test:all": "jest --coverage --verbose",
        "quality": "./scripts/discord-bot.sh quality",
        "check:deps": "depcheck --config depcheck.config.cjs",
        "check:outdated": "ncu",
        "update:deps": "ncu -u && npm install",
        "audit:high": "npm audit --audit-level high",
        "audit:critical": "npm audit --audit-level critical",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate dev",
        "db:deploy": "prisma migrate deploy",
        "db:reset": "prisma migrate reset",
        "db:seed": "prisma db seed",
        "db:setup": "./scripts/setup-database.sh",
        "db:status": "prisma db status",
        "db:studio": "prisma studio",
        "prepare": "husky",
        "commit": "git-cz"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix -c eslint.config.js",
            "prettier --write"
        ],
        "*.{js,json,md}": [
            "prettier --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "engines": {
        "node": ">=22.x"
    },
    "optionalDependencies": {
        "@discordjs/opus": "^0.10.0"
    },
    "keywords": [
        "discord",
        "bot",
        "music",
        "typescript"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@discordjs/builders": "^1.13.1",
        "@prisma/client": "^7.2.0",
        "@sentry/node": "^10.32.1",
        "chalk": "^5.6.2",
        "discord-player": "^7.1.0",
        "discord-player-youtubei": "^1.5.0",
        "discord.js": "^14.25.1",
        "dotenv": "^17.2.3",
        "ffmpeg-static": "^5.3.0",
        "fluent-ffmpeg": "^2.1.3",
        "ioredis": "^5.8.2",
        "module-alias": "^2.2.3",
        "play-dl": "^1.9.7",
        "uuid": "^13.0.0",
        "youtubei.js": "^16.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.3.0",
        "@commitlint/config-conventional": "^20.3.0",
        "@eslint/js": "^9.39.2",
        "@jest/globals": "^30.2.0",
        "@types/fluent-ffmpeg": "^2.1.28",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.3",
        "@typescript-eslint/eslint-plugin": "^8.51.0",
        "@typescript-eslint/parser": "^8.51.0",
        "commitizen": "^4.3.1",
        "cross-env": "^10.1.0",
        "cz-conventional-changelog": "^3.3.0",
        "depcheck": "^1.4.7",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^17.0.0",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.7",
        "prisma": "^7.2.0",
        "ts-jest": "^29.4.6",
        "tsup": "^8.5.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}
