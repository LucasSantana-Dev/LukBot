{
    "name": "lukbot",
    "version": "2.0.0",
    "description": "Discord bot for music playback and downloads",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "./scripts/docker.sh build-prod",
        "build:dev": "./scripts/docker.sh build-dev",
        "start": "./scripts/docker.sh start-prod",
        "dev": "./scripts/docker.sh start-dev",
        "dev:watch": "./scripts/dev.sh dev:watch",
        "stop": "./scripts/docker.sh stop",
        "restart": "./scripts/docker.sh restart prod",
        "restart:dev": "./scripts/docker.sh restart dev",
        "logs": "./scripts/docker.sh logs prod",
        "logs:dev": "./scripts/docker.sh logs dev",
        "status": "./scripts/docker.sh status",
        "clean": "./scripts/docker.sh clean",
        "format": "prettier . --write",
        "lint": "eslint . -c eslint.config.js",
        "lint:fix": "eslint . -c eslint.config.js --fix",
        "lint:format": "npm run lint:fix && npm run format",
        "type:check": "tsc --noEmit",
        "test": "./scripts/dev.sh test",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "quality": "./scripts/dev.sh quality",
        "check:deps": "depcheck --config depcheck.config.cjs",
        "check:outdated": "ncu",
        "update:deps": "ncu -u && npm install",
        "install": "./scripts/dev.sh install",
        "audit": "./scripts/dev.sh audit",
        "prepare": "husky",
        "commit": "git-cz",
        "commit:retry": "git-cz --retry",
        "help": "./scripts/docker.sh help"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{js,json,md}": [
            "prettier --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "engines": {
        "node": ">=22.x"
    },
    "keywords": [
        "discord",
        "bot",
        "music",
        "typescript"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@discordjs/builders": "^1.11.3",
        "@opentelemetry/api": "^1.9.0",
        "@sentry/node": "^10.11.0",
        "@sentry/profiling-node": "^10.11.0",
        "chalk": "^5.6.2",
        "discord-player": "^7.1.0",
        "discord-player-youtubei": "^1.5.0",
        "discord.js": "^14.22.1",
        "dotenv": "^17.2.2",
        "ffmpeg-static": "^5.2.0",
        "fluent-ffmpeg": "^2.1.3",
        "module-alias": "^2.2.3",
        "play-dl": "^1.9.7",
        "prettier": "^3.6.2",
        "youtubei.js": "^15.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.35.0",
        "@types/fluent-ffmpeg": "^2.1.27",
        "@types/node": "^24.3.1",
        "@typescript-eslint/eslint-plugin": "^8.43.0",
        "@typescript-eslint/parser": "^8.43.0",
        "commitizen": "^4.3.1",
        "cross-env": "^10.0.0",
        "cz-conventional-changelog": "^3.3.0",
        "depcheck": "^1.4.7",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.6",
        "tsup": "^8.5.0",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2"
    }
}
