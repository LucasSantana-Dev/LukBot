# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id_here

# Bot Settings
BOT_NAME=MyMusicBot
BOT_DESCRIPTION=The best music bot for our server!
BOT_AVATAR_URL=https://mywebsite.com/bot-avatar.png
BOT_COLOR=0xFF6B6B
BOT_WEBSITE=https://mywebsite.com
BOT_SUPPORT_SERVER=https://discord.gg/myserver
COMMAND_CATEGORIES_DISABLED=download,music  # Comma-separated list of disabled categories
LOG_LEVEL=4  # 0=ERROR, 1=WARN, 2=INFO, 3=SUCCESS, 4=DEBUG
NODE_ENV=development  # development or production

# Monitoring & Logging (Sentry)
SENTRY_DSN=your_sentry_dsn_here  # Get this from your Sentry project settings